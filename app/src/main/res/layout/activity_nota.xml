<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/boton_tornarP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="15dp"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/outline_arrow_back_ios_black_24dp" />

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                app:srcCompat="@drawable/icontnote" />

            <ImageButton
                android:id="@+id/boton_guardar_nota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="right|center_vertical"

                android:background="#FFFFFF"
                app:srcCompat="@drawable/_714__2___1_" />

        </LinearLayout>


        <EditText
            android:id="@+id/titol_nota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="TÍTOL DE LA NOTA"
            android:textColor="#040404" />

        <TextView
            android:id="@+id/text_DateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="#070707" />


        <EditText
            android:id="@+id/text_nota"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="top"
            android:layout_marginTop="10dp"
            android:hint="Escriure text..."
            android:inputType="textMultiLine" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/icon6"
                android:layout_width="99dp"
                android:layout_height="67dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                app:srcCompat="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/cam"
                android:layout_width="121dp"
                android:layout_height="70dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                app:srcCompat="@android:drawable/ic_menu_camera" />

            <ImageButton
                android:id="@+id/icon7"
                android:layout_width="132dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                app:srcCompat="@android:drawable/ic_btn_speak_now" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>