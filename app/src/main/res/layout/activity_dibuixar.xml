<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    android:orientation="vertical"
    tools:context=".DibuixarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/icontnote" />

            <ImageButton
                android:id="@+id/izquierda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_uno"
                app:srcCompat="@drawable/round_undo_black_24dp" />

            <ImageButton
                android:id="@+id/derecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_uno"
                app:srcCompat="@drawable/round_redo_black_24dp" />

            <ImageButton
                android:id="@+id/guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_uno"
                app:srcCompat="@drawable/round_done_black_24dp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="486dp">

            <include layout="@layout/view_display"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/lapiz"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_uno"
                android:onClick="pencil"
                app:srcCompat="@drawable/pencil" />

            <ImageButton
                android:id="@+id/paleta"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_uno"
                android:onClick="goma"
                app:srcCompat="@drawable/round_palette_black_24dp" />

            <ImageButton
                android:id="@+id/grosor"
                android:layout_width="57dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_uno"
                android:onClick="eraser"
                app:srcCompat="@drawable/round_gesture_black_24dp" />

            <ImageButton
                android:id="@+id/opacity"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_uno"
                app:srcCompat="@drawable/outline_opacity_black_24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="vertical">

            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tab_layout"
                app:tabTextColor="@android:color/white"
                app:tabIndicatorColor="@android:color/white"
                android:background="@color/colorPrimary"/>
            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/view_pager"/>



        </LinearLayout>
    </LinearLayout>

</RelativeLayout>