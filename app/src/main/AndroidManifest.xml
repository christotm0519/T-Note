<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.t_note">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TNote">
        <activity android:name=".CanviUsuariActivity"></activity>
        <activity android:name=".Camera" />
        <activity android:name=".DibuixarActivity" />
        <activity android:name=".GrabadoraActivity" />
        <activity android:name=".NotaActivity" />
        <activity android:name=".CanviContrasenyaActivity" />
        <activity android:name=".PantallaActivity" />
        <activity android:name=".Settings" />
        <activity android:name=".RegistrarActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>